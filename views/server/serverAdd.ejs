<%- include("../includes/header.ejs", {title: "Add New Server"}); %>
<%- include("../includes/style.ejs"); %>
<div class="container">

    <h1>Add New Server</h1>
    <form action="/server/insert" method="get">
        <div class="form-group">
            <label for="server_ip">Server IP:</label> <input class="form-control" id="server_ip" name="server_ip" type="text" />
        </div>
        <div class="form-group">
            <label for="server_name">Server Name:</label> <input class="form-control" id="server_name" name="server_name" type="text" />
        </div>
        <div class="form-check">
            <label>Server Status:</label>
            <br/>
            <label for="server_status" class="form-check-label">
                <input class="form-check-input" type="radio" id="server_status" name="server_status" value="1" checked>Online <br />
                <input class="form-check-input" type="radio" id="server_status" name="server_status" value="0">Offline
            </label>
        </div>
        <div class="form-group">
            <label for="game_name_server">Game:</label>
            <select class="form-control" id="game_name_server" name="game_name_server">
                <% for(var i=0; games.length > i; i++ ) { %>
                <option value="<%= games[i].game_name %>"><%= games[i].game_name %></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="dev_name_server">Developer:</label>
            <select class="form-control" id="dev_name_server" name="dev_name_server">
                <% for(var i=0; dev.length > i; i++ ) { %>
                <option value="<%= dev[i].dev_name %>"><%= dev[i].dev_name %></option>
                <% } %>
            </select>
        </div>
        <input class="btn btn-success" type="submit" />

    </form>

</div>
<%- include("../includes/footer.ejs"); %>